<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h2>Cannot Log into Xero.</h2>
        <h3>Some required permissions were not granted.</h3>
        <div class="panel panel-primary panel-headroom">
            <div class="panel-heading">
                Companies with missing access
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @inject Microsoft.Extensions.Options.IOptions<PE.Nominal.XeroGL.XeroConfig> XeroOptions
                    @{
                        foreach (var org in XeroOptions.Value.OrgConfigs)
                        {
                            if (org.OAuthTenantId == "")
                            {
                                <div>@Html.Raw(org.OAuthTenantName)</div>
                            }
                        }
                    }
                </div>
                <div class="panel-footer text-right">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Back to Menu</a>
                </div>
            </div>
        </div>
    </div>
</div>
